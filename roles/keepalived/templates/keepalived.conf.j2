vrrp_script check_haproxy {                 
    script "/home/keepalived_script/vrrp_script"  
    weight 20                              
    interval 1               
}
vrrp_instance agama {             
    interface ens3
    virtual_router_id 51
    priority 100
    advert_int 1
    preempt                            
    virtual_ipaddress {
	{% if (hostvars['kagu22-1']['ansible_default_ipv4']['address'] | split('.'))[2]  == '42' %}
	{% set oct = 100 %} 
        {% else %}
        {% set oct = 101 %}
        {% endif %}      
        192.168.100.{{ hostvars['kagu22-1']['ansible_default_ipv4']['address'].split('.')[-1] }}/24     
    }
    unicast_peer {                          
        {% for vm in groups['web_servers'] -%}
        {% if inventory_hostname != vm -%}                      
        {{ hostvars[vm]['ansible_default_ipv4']['address'] }}
        {% endif -%}
        {% endfor -%}
    }
    track_script {
        check_haproxy
    }
}
