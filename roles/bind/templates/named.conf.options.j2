acl mynet {
    {% for network in local_network %}
    {{ network }};
    {% endfor %}

    {% for host in localhost %}
    {{ host }};
    {% endfor %}
};

options { 
	directory "/var/lib/bind";
        forwarders {
      {% for f in dns_forwarders %}
            {{ f }};
      {% endfor %}  	
	};
        allow-query { 
          mynet;
          172.17.0.0/16;
        };
	dnssec-validation no;
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};

