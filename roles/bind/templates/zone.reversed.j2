$TTL	604800
{{ reversed_domain }}.	IN	SOA	vm2.{{ domain_name }}. tiit.{{ domain_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

{% for vm in groups['dns_servers'] %}
{{ reversed_domain }}.	IN	NS	{{ vm }}.{{ domain_name }}
{% endfor %}

{% for vm in groups['all'] %}
{{ hostvars[vm]['ansible_default_ipv4']['address'].split('.')[-1] }}	IN	PTR	{{ vm }}.{{ domain_name }}.
{% endfor %}
backup IN  A  {{ backup_server_ip }}